# Database Configuration
# Similar to Laravel's database configuration
# Options: postgresql, postgres, mysql, mysql+pymysql

# PostgreSQL Configuration (Default)
DB_CONNECTION=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=fastapi_boilerplate
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Optional: PostgreSQL SSL Mode (require, prefer, allow, disable)
# DB_SSL_MODE=prefer

# MySQL Configuration Example
# DB_CONNECTION=mysql+pymysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=fastapi_boilerplate
# DB_USERNAME=root
# DB_PASSWORD=root

# Optional: MySQL Unix Socket (for MAMP or local MySQL)
# DB_UNIX_SOCKET=/Applications/MAMP/tmp/mysql/mysql.sock

# Application Configuration
APP_NAME=FastAPI Boilerplate
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=your-secret-key-here
APP_TIMEZONE=UTC

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Redis Configuration (for Caching and Message Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache Configuration
CACHE_PREFIX=cache:
CACHE_DEFAULT_TTL=3600
CACHE_SERIALIZER=json

# Rate Limiting Configuration
RATE_LIMIT=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Email Configuration
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME=${APP_NAME}

# Celery Configuration (Message Queue)
# These are auto-generated from Redis config if not set
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1200

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Filesystem Configuration
# Options: local, public, s3, ftp, sftp
# - local: Private storage (storage/app) - NOT publicly accessible
# - public: Public storage (public/storage) - Accessible via /storage/ URL
FILESYSTEM_DISK=local
FILESYSTEM_ROOT=storage/app
FILESYSTEM_PUBLIC_ROOT=public/storage
FILESYSTEM_URL=

# AWS S3 Configuration (for s3 disk)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=your-bucket-name
# AWS_ENDPOINT=  # Optional: for S3-compatible services

# FTP Configuration (for ftp disk)
# FTP_HOST=localhost
# FTP_PORT=21
# FTP_USERNAME=your-username
# FTP_PASSWORD=your-password

# SFTP Configuration (for sftp disk)
# SFTP_HOST=localhost
# SFTP_PORT=22
# SFTP_USERNAME=your-username
# SFTP_PASSWORD=your-password
# SFTP_KEY=/path/to/private/key 